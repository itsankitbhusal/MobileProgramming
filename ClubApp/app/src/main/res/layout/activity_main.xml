<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Club image -->
    <ImageView
        android:id="@+id/iv_club_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/busybee"/>

    <!-- Club name -->
    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Club Name"/>

    <!-- Club type -->
    <TextView
        android:id="@+id/tv_club_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Club Type"/>

    <!-- Club address -->
    <TextView
        android:id="@+id/tv_club_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Club Address"/>

    <!-- Tonight events heading -->
    <TextView
        android:id="@+id/tv_tonight_events_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Tonight Events"/>

    <!-- Tonight events list -->
    <ListView
        android:id="@+id/lv_tonight_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
