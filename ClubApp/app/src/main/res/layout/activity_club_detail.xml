<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ClubDetailActivity">

    <TextView
        android:id="@+id/tvClubname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club Name"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

    />

    <TextView
        android:id="@+id/tvClubtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvClubname"
        app:layout_constraintEnd_toEndOf="@+id/tvClubname"
        app:layout_constraintTop_toBottomOf="@+id/tvClubname"
        android:textStyle="italic"
        android:text="Club Type"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/ivImage"
        android:src="@drawable/or2k"
        android:layout_width="0dp"
        android:layout_height="200dp"

        app:layout_constraintTop_toBottomOf="@+id/tvClubtype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImage"
        android:layout_margin="20dp"
        android:text="Club Address"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tvTonightEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress"
        android:layout_margin="20dp"
        android:text="Club Tonight Events"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>